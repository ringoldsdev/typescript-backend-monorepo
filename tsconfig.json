{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "emitBOM": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "ts-node": {
    "ignore": ["/node_modules/(?!(@packages|@actions|@services))/"],
    "require": ["tsconfig-paths/register"]
  }
}
