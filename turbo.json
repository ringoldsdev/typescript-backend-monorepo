{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "inputs": ["src/**/*.ts", "__tests__/**/*.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
